<launch>
    <arg name="map_file" default="$(find clcbs_gazebo)/models/heightmap/map.yaml"/>
    <!-- Run the map server -->
    <node name="map_server" pkg="map_server" type="map_server" args="$(arg map_file)" />

    <param name="robot_name" type="str" value="agent1" />
    <param name="link_name" type="str" value="robot_base" />

    <node pkg="tf" type="static_transform_publisher" name="map_tf" args="0 0 0 0 0 0 world_base map 100" />
    <node pkg="clcbs_gazebo" type="robot_tf.py" name="robot_pose_tf_publisher" args="-r agent1 -l robot_base"/>

    <node pkg="rviz" type="rviz" name="rviz" args="-d $(find clcbs_gazebo)/launch/clcbs_world.rviz" />
</launch>